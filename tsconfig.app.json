{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "moduleDetection": "force",
    "isolatedModules": true,
    "allowImportingTsExtensions": true,

    "types": ["vite/client"]   // for import.meta.env, etc.
  },
  "include": ["src"]            // only your browser code
}







